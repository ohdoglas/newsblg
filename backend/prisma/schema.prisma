generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id        String    @id @default(uuid())
  title     String?   @db.VarChar(255)
  content   String    @db.Text
  params    Json
  isPublic  Boolean   @default(false)
  createdAt DateTime  @default(now())
  deletedAt DateTime?
}
